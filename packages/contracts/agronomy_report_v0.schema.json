{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "agronomy_report_v0",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "type",
    "schema_version",
    "report_id",
    "determinism_hash",
    "subjectRef",
    "window",
    "evidence"
  ],
  "properties": {
    "type": { "const": "agronomy_report_v0" },
    "schema_version": { "const": "0" },
    "report_id": { "type": "string", "pattern": "^ar_[0-9a-f]{24}$" },
    "determinism_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "subjectRef": {
      "type": "object",
      "additionalProperties": false,
      "required": ["projectId", "groupId"],
      "properties": {
        "projectId": { "type": "string", "minLength": 1 },
        "groupId": { "type": "string", "minLength": 1 }
      }
    },
    "window": {
      "type": "object",
      "additionalProperties": false,
      "required": ["startTs", "endTs"],
      "properties": {
        "startTs": { "type": "integer" },
        "endTs": { "type": "integer" }
      }
    },
    "evidence": {
      "type": "object",
      "additionalProperties": false,
      "required": ["metric_stats", "marker_kinds", "marker_count", "evidence_refs"],
      "properties": {
        "metric_stats": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "metric",
              "count",
              "first_ts_ms",
              "last_ts_ms",
              "first_value",
              "last_value",
              "min_value",
              "max_value",
              "delta_value"
            ],
            "properties": {
              "metric": { "type": "string", "minLength": 1 },
              "count": { "type": "integer", "minimum": 0 },
              "first_ts_ms": { "type": "integer" },
              "last_ts_ms": { "type": "integer" },
              "first_value": { "type": "number" },
              "last_value": { "type": "number" },
              "min_value": { "type": "number" },
              "max_value": { "type": "number" },
              "delta_value": { "type": "number" }
            }
          }
        },
        "marker_kinds": {
          "type": "array",
          "items": { "type": "string" }
        },
        "marker_count": { "type": "integer", "minimum": 0 },
        "evidence_refs": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["kind", "ref_id"],
            "properties": {
              "kind": { "type": "string", "minLength": 1 },
              "ref_id": { "type": "string", "minLength": 1 }
            }
          }
        }
      }
    }
  }
}
