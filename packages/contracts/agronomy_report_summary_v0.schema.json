{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "agronomy_report_summary_v0",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "type",
    "schema_version",
    "report_id",
    "determinism_hash",
    "subjectRef",
    "window",
    "metric_count",
    "marker_count"
  ],
  "properties": {
    "type": { "const": "agronomy_report_summary_v0" },
    "schema_version": { "const": "0" },
    "report_id": { "type": "string", "pattern": "^ar_" },
    "determinism_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "subjectRef": {
      "type": "object",
      "additionalProperties": false,
      "required": ["projectId", "groupId"],
      "properties": {
        "projectId": { "type": "string", "minLength": 1 },
        "groupId": { "type": "string", "minLength": 1 }
      }
    },
    "window": {
      "type": "object",
      "additionalProperties": false,
      "required": ["startTs", "endTs"],
      "properties": {
        "startTs": { "type": "integer" },
        "endTs": { "type": "integer" }
      }
    },
    "metric_count": { "type": "integer", "minimum": 0 },
    "marker_count": { "type": "integer", "minimum": 0 }
  }
}
