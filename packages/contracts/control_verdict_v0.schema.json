{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "control_verdict_v0.schema.json",
  "title": "control_verdict_v0",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "type",
    "schema_version",
    "verdict_id",
    "evaluated_at_ts",
    "subjectRef",
    "window",
    "action_code",
    "verdict"
  ],
  "properties": {
    "type": { "const": "control_verdict_v0" },
    "schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "verdict_id": { "type": "string", "minLength": 1 },
    "evaluated_at_ts": { "type": "integer" },
    "subjectRef": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "projectId": { "type": "string" },
        "groupId": { "type": "string" },
        "plotId": { "type": "string" },
        "blockId": { "type": "string" }
      }
    },
    "window": {
      "type": "object",
      "additionalProperties": false,
      "required": ["startTs", "endTs"],
      "properties": {
        "startTs": { "type": "integer" },
        "endTs": { "type": "integer" }
      }
    },
    "action_code": { "type": "string", "minLength": 1 },
    "verdict": {
      "type": "string",
      "enum": ["ALLOW", "DENY", "UNDETERMINED"]
    },
    "rule_ref": { "type": "string" },
    "input_refs": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}

