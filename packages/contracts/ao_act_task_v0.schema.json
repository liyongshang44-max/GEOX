{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AO_ACT_TASK_v0",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "type",
    "schema_version",
    "task_id",
    "created_at_ts",
    "subjectRef",
    "window",
    "act_kind",
    "act_target",
    "priority",
    "supporting_problem_state_id",
    "supporting_determinism_hash",
    "supporting_effective_config_hash"
  ],
  "properties": {
    "type": { "const": "ao_act_task_v0" },
    "schema_version": { "const": "0" },
    "task_id": { "type": "string", "minLength": 1 },
    "created_at_ts": { "type": "integer" },
    "subjectRef": {
      "type": "object",
      "additionalProperties": false,
      "required": ["projectId", "groupId"],
      "properties": {
        "projectId": { "type": "string", "minLength": 1 },
        "groupId": { "type": "string", "minLength": 1 }
      }
    },
    "window": {
      "type": "object",
      "additionalProperties": false,
      "required": ["startTs", "endTs"],
      "properties": {
        "startTs": { "type": "integer" },
        "endTs": { "type": "integer" }
      }
    },
    "act_kind": { "type": "string", "minLength": 1 },
    "act_target": { "type": "string", "minLength": 1 },
    "priority": { "type": "string", "enum": ["LOW", "MEDIUM", "HIGH"] },
    "supporting_problem_state_id": { "type": "string", "minLength": 1 },
    "supporting_determinism_hash": { "type": "string", "minLength": 1 },
    "supporting_effective_config_hash": { "type": "string", "minLength": 1 }
  }
}
