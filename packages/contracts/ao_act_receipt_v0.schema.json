{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ao_act_receipt_v0_record",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "type",
    "payload"
  ],
  "properties": {
    "type": {
      "const": "ao_act_receipt_v0"
    },
    "payload": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "act_task_id",
        "executor_id",
        "execution_time",
        "execution_coverage",
        "resource_usage",
        "logs_refs",
        "constraint_check",
        "observed_parameters",
        "created_at_ts"
      ],
      "properties": {
        "act_task_id": {
          "type": "string",
          "minLength": 1
        },
        "executor_id": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "kind",
            "id",
            "namespace"
          ],
          "properties": {
            "kind": {
              "enum": [
                "human",
                "script",
                "device"
              ]
            },
            "id": {
              "type": "string",
              "minLength": 1
            },
            "namespace": {
              "type": "string",
              "minLength": 1
            }
          }
        },
        "execution_time": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "start_ts",
            "end_ts"
          ],
          "properties": {
            "start_ts": {
              "type": "number"
            },
            "end_ts": {
              "type": "number"
            }
          }
        },
        "execution_coverage": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "kind",
            "ref"
          ],
          "properties": {
            "kind": {
              "enum": [
                "field",
                "area",
                "path"
              ]
            },
            "ref": {
              "type": "string",
              "minLength": 1
            }
          }
        },
        "resource_usage": {
          "type": "object",
          "additionalProperties": true,
          "required": [
            "fuel_l",
            "electric_kwh",
            "water_l",
            "chemical_ml"
          ],
          "properties": {
            "fuel_l": {
              "type": [
                "number",
                "null"
              ]
            },
            "electric_kwh": {
              "type": [
                "number",
                "null"
              ]
            },
            "water_l": {
              "type": [
                "number",
                "null"
              ]
            },
            "chemical_ml": {
              "type": [
                "number",
                "null"
              ]
            }
          }
        },
        "logs_refs": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "kind",
              "ref"
            ],
            "properties": {
              "kind": {
                "type": "string",
                "minLength": 1
              },
              "ref": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        },
        "status": {
          "enum": [
            "executed",
            "not_executed"
          ]
        },
        "constraint_check": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "violated",
            "violations"
          ],
          "properties": {
            "violated": {
              "type": "boolean"
            },
            "violations": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "observed_parameters": {
          "type": "object",
          "additionalProperties": {
            "type": [
              "number",
              "boolean",
              "string"
            ]
          }
        },
        "created_at_ts": {
          "type": "number"
        },
        "device_refs": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "kind",
              "ref"
            ],
            "properties": {
              "kind": {
                "type": "string",
                "enum": [
                  "device_ref_fact"
                ]
              },
              "ref": {
                "type": "string",
                "minLength": 8
              },
              "note": {
                "type": [
                  "string",
                  "null"
                ],
                "maxLength": 280
              }
            }
          }
        },
        "meta": {
          "type": "object"
        }
      }
    }
  }
}