{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AO_ACT_RECEIPT_v0",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "type",
    "schema_version",
    "receipt_id",
    "created_at_ts",
    "task_id",
    "executed_at_ts",
    "result",
    "evidence_refs"
  ],
  "properties": {
    "type": { "const": "ao_act_receipt_v0" },
    "schema_version": { "const": "0" },
    "receipt_id": { "type": "string", "minLength": 1 },
    "created_at_ts": { "type": "integer" },
    "task_id": { "type": "string", "minLength": 1 },
    "executed_at_ts": { "type": "integer" },
    "result": { "type": "string", "enum": ["success", "fail", "partial"] },
    "evidence_refs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["kind", "ref_id"],
        "properties": {
          "kind": {
            "type": "string",
            "enum": ["raw_sample_v1", "marker_v1", "fact_id", "import_run_v1"]
          },
          "ref_id": { "type": "string", "minLength": 1 }
        }
      }
    }
  }
}
